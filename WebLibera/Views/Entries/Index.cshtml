@model IEnumerable<WebLibera.Models.Entry>

@{
    Layout = "~/Views/Shared/_LayoutLibera.cshtml";
    int? eee = null;
    if (Session["userID"] != null)
    {
        eee = Convert.ToInt32(Session["userID"]);
    }


}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
@if (Session["userID"]  != null)
{
    <p>Hola  @Session["nombre de usuario"]</p>
    
}
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            @if (eee== item.UserId)
            {   <td>
                    Usted
                </td>
            }else { 
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @if (eee == item.User.Id)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
