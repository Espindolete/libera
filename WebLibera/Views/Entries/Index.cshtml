@model IEnumerable<WebLibera.Models.Entry>

@{
    Layout = "~/Views/Shared/_LayoutLibera.cshtml";
    int? eee = null;
    if (Session["userID"] != null)
    {
        eee = Convert.ToInt32(Session["userID"]);
    }


}

<section id="intro" class="clearfix">
    <div class="container d-flex h-100">
        <div class="row justify-content-center align-self-center">
            <div class="col-md-6 intro-info order-md-first order-last">
                <h2><br>Eventos y Campañas<br><span></span></h2>
                <!--<div>
                  <a href="#about" class="btn-get-started scrollto">Comencemos</a>
                </div>-->
            </div>

        </div>
</section><!-- #intro -->
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tittle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (eee == item.UserId)
            {
                <td>
                    Usted
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (eee == item.User.Id)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
