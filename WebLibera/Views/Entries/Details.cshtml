@model WebLibera.Models.DetailEntryModel

@{
    Layout = "~/Views/Shared/_LayoutLibera.cshtml";
}



<body>
    <div>
        <h4>Entry</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.entry.User.Username)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.entry.User.Username)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.entry.Tittle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.entry.Tittle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.entry.Content)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.entry.Content)
            </dd>
            <dt>
                @Html.DisplayNameFor(model=> model.entry.imgData)
            </dt>
            <dd>
                @if (Model.entry.imgData != null)
                {

                    var base64 = Convert.ToBase64String(Model.entry.imgData);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    <img src="@imgSrc" />
                }
            </dd>

        </dl>
    </div>
    <p>
        @if (Session["userID"] != null)
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.entry.Id })
        }
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
